    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_login_facebook"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:backgroundTint="@color/facebook"
                android:src="@drawable/ic_facebook"
                android:layout_margin="6dp"
                app:fabSize="normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_login_twitter"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:backgroundTint="@color/twitter"
                android:src="@drawable/ic_twitter"
                android:layout_margin="6dp"
                app:fabSize="normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_login_instagram"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:backgroundTint="@color/instagram"
                android:src="@drawable/ic_instagram"
                android:layout_margin="6dp"
                app:fabSize="normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_login_google"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_google_plus"
                android:layout_margin="6dp"
                app:backgroundTint="@color/google_pluse"
                app:fabSize="normal"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text_view_or_label"
            android:background="#AAFFFFFF" />

        <TextView
            android:id="@+id/text_view_or_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="OR"
            android:textColor="#AAFFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_view_or_label"
            android:background="#AAFFFFFF" />
    </RelativeLayout>

    <!--<TextView
        android:id="@+id/text_view_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAFFFFFF"
        android:textSize="14sp"
        android:text="OR"
        android:layout_gravity="center_horizontal"
        android:layout_margin="18dp"/>-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColorHint="#AAFFFFFF"
        >
        <EditText
            android:id="@+id/edit_text_email"
            android:hint="Email Address"
            android:drawableLeft="@mipmap/ic_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:drawablePadding="8dp"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"

        android:layout_marginTop="2dp">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#AAFFFFFF">
        <EditText
            android:layout_marginRight="16dp"
            android:paddingRight="80dp"
            android:id="@+id/edit_text_password"
            android:hint="Password"
            android:drawableLeft="@mipmap/ic_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:id="@+id/button_forgot_password"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot?"
            android:textAllCaps="false"
            android:textColor="#00eaff"
            style="?attr/borderlessButtonStyle"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="40dp">
       <!-- <Button
            android:id="@+id/button_login"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:padding="8dp"
            android:textColor="@color/colorAccent" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:text="Reset"
                android:background="@color/white"
                android:gravity="left|center"
                android:drawablePadding="5dip"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/Darkblue"
                android:padding="10dp"
                android:drawableLeft="@mipmap/ic_reset"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/button_login"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:text="Login"
                android:gravity="right|center"
                android:drawablePadding="5dip"
                android:padding="10dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/Darkblue"
                android:drawableRight="@mipmap/ic_next"
                android:background="@color/white"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/button_skip"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_marginBottom="6dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="38dp"-->
            <!--android:text="Skip"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:background="@color/colorPrimary"-->
            <!--style="@style/Base.Widget.AppCompat.Button.Colored"/>-->
    </LinearLayout>

    <Button
        android:id="@+id/button_not_registered"
        style="?attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textAllCaps="false"
        android:text="No Account Yet? SignUp"
        android:textColor="#AAFFFFFF"/>


</LinearLayout>
